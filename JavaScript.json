// StudentApiController.java
@RestController
@RequestMapping("/api/students")
public class StudentApiController {
    private final StudentRepository studentRepo;
    public StudentApiController(StudentRepository studentRepo) { this.studentRepo = studentRepo; }

    @GetMapping("/{id}/in-class")
    public ResponseEntity<Map<String,Boolean>> isInClass(@PathVariable Long id) {
        Optional<Student> s = studentRepo.findById(id);
        if (s.isEmpty()) return ResponseEntity.notFound().build();
        boolean inClass = s.get().getSwimmingClass() != null;
        Map<String,Boolean> map = Collections.singletonMap("inClass", inClass);
        return ResponseEntity.ok(map);
    }
}
