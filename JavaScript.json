document.addEventListener('DOMContentLoaded', () => {
  const a = document.getElementById('choice1Time');
  const b = document.getElementById('choice2Time');

  function syncDisable() {
    const va = a.value;
    const vb = b.value;
    // enable all first
    Array.from(a.options).forEach(o => o.disabled = false);
    Array.from(b.options).forEach(o => o.disabled = false);

    if (va) {
      const o = Array.from(b.options).find(opt => opt.value === va);
      if (o) o.disabled = true;
    }
    if (vb) {
      const o2 = Array.from(a.options).find(opt => opt.value === vb);
      if (o2) o2.disabled = true;
    }
  }

  a.addEventListener('change', syncDisable);
  b.addEventListener('change', syncDisable);

  // final form submit check (fallback)
  const form = document.getElementById('studentRegistrationForm'); // change id accordingly
  if (form) {
    form.addEventListener('submit', (e) => {
      if (a.value && b.value && a.value === b.value) {
        e.preventDefault();
        alert('Please choose different times for the two choices.');
      }
    });
  }
});
