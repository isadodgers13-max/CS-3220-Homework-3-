document.addEventListener('DOMContentLoaded', () => {
  const items = document.querySelectorAll('#studentsList .student-name');
  items.forEach(li => {
    const sid = li.dataset.studentId;
    if (!sid) return;
    fetch(`/api/students/${sid}/in-class`)
      .then(resp => {
        if (!resp.ok) throw resp;
        return resp.json();
      })
      .then(json => {
        if (json.inClass) {
          li.classList.add('text-success'); // bootstrap success color
        }
      })
      .catch(err => {
        // ignore 404s for individual students or log if you want
        console.error('Check in-class failed for student ' + sid, err);
      });
  });
});
